{
  "name": "text-editor-with-tags",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://alexborisewich.github.io/text-editor-with-tags/",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.8.4",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && echo '/* /index.html  200' | cat >build/_redirects ",
    "test": "react-scripts test",
    "test-coverage": "npm run test -- --coverage --watch=false",
    "eject": "react-scripts eject",
    "lintcode": "eslint --ext .js,.jsx,.ts,.tsx src",
    "fixcode": "npm run lintcode -- --fix",
    "lintstyles": "stylelint ./src/**/*.{css,scss,sass}",
    "fixstyles": "npm run lintstyles -- --fix",
    "lint": "npm run lintcode && npm run lintstyles",
    "fix": "npm run fixcode && npm run fixstyles",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build -m \"feat: deploy app to github pages\"",
    "new-component": "hygen new component"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.0",
    "hygen": "^6.2.11",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "stylelint": "^14.15.0",
    "stylelint-config-clean-order": "^0.9.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.{ts, tsx}",
      "!src/**/*.types.ts",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/reportWebVitals.ts"
    ]
  }
}
